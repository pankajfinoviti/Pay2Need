<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/image_aadhaar_card"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/b"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="VERIFY OTP"
                        android:textColor="@color/black1"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:text="@string/otp_message" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_otp_1"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:inputType="number"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:maxLength="1"
                            android:textSize="@dimen/text_size16" />

                        <EditText
                            android:id="@+id/edit_otp_2"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textSize="@dimen/text_size16" />

                        <EditText
                            android:id="@+id/edit_otp_3"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textSize="@dimen/text_size16" />

                        <EditText
                            android:id="@+id/edit_otp_4"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textSize="@dimen/text_size16" />

                        <EditText
                            android:id="@+id/edit_otp_5"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textSize="@dimen/text_size16"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/edit_otp_6"
                            android:layout_width="@dimen/otp_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:maxLength="1"
                            android:visibility="gone"
                            android:inputType="number"
                            android:textSize="@dimen/text_size16" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Didn't received otp?"
                        android:textColor="@color/black1"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="RESEND OTP"
                            android:textColor="@color/white"
                            android:background="@drawable/round_corner"
                            android:id="@+id/btn_resend"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="VERIFY"
                            android:background="@drawable/round_corner_green"
                            android:textColor="@color/white"
                            android:id="@+id/btn_verify"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
