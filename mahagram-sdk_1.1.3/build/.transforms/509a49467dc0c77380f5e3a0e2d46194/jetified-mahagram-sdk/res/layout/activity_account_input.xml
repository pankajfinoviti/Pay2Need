<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentUpLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".aeps.CashDeposite.IciciCashDepositActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cared_e"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="5dp">

        <include
            android:id="@+id/tittlebar_top"
            layout="@layout/card_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scroolview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_scan_cashdeposite"
        android:layout_below="@+id/cared_e"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroybold"
                android:lineSpacingExtra="7dp"
                android:text="Please give your\nbank account details"
                android:textColor="@color/blue_bhart"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroymedium"
                android:text="Make sure Mobile No is linked with the bank account"
                android:textColor="@color/bhartgray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_customerName_depoit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gilroybold"
                android:text="Welcome"
                android:textColor="@color/blue_bhart"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Enter Mobile Number"
                    android:textColor="#6C727A"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone_android_black_24dp" />

                    <EditText
                        android:id="@+id/edit_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gilroymedium"
                        android:inputType="number"
                        android:maxLength="12"
                        android:text=""
                        android:textColor="#343352"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Enter Amount"
                    android:textColor="#6C727A"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/with_rupes" />

                    <EditText
                        android:id="@+id/ammount_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gilroymedium"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text=""
                        android:textColor="#343352"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_one"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:background="@drawable/curve_bakground_icici"
                    android:fontFamily="@font/gilroymedium"
                    android:text=" \u20B9500"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_two"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:background="@drawable/curve_bakground_icici"
                    android:fontFamily="@font/gilroymedium"
                    android:text=" \u20B91000"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_three"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:background="@drawable/curve_bakground_icici"
                    android:fontFamily="@font/gilroymedium"
                    android:text=" \u20B92000"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_four"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:background="@drawable/curve_bakground_icici"
                    android:fontFamily="@font/gilroymedium"
                    android:text=" \u20B93000"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_five"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:background="@drawable/curve_bakground_icici"
                    android:fontFamily="@font/gilroymedium"
                    android:text=" \u20B94000"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Enter Account Number"
                    android:textColor="#6C727A"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/account_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gilroymedium"
                        android:hint="Write here"
                        android:inputType="number"
                        android:maxLength="20"
                        android:text=""
                        android:textColor="@color/blue_bhart"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_shildlock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Your data is safe with us!"
                    android:textColor="#45B07C"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gilroymedium"
                android:lineSpacingExtra="7dp"
                android:text="We never store your Aadhaar number in any form neither we share aadhaar or account related details to anyone. Under RBI guidelines BC we are permitted to capture your aadhaar number to complete your banking transaction through AEPS bridge."
                android:textColor="#6C727A"
                android:textSize="12sp" />


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/btn_scan_cashdeposite"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout_button_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gilroybold"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_path" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>