<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentLayout_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aeps.airtelaeps.Airtelcashwithdrawlactivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/viewimg"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/titlebar"
        android:background="@color/white"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroolview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cash_submit_airtel"
        android:layout_below="@+id/viewimg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroybold"
                android:text="@string/aadhardetails"
                android:textColor="@color/blue_bhart"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroymedium"
                android:text="@string/makuesureaadha"
                android:textColor="@color/bhartgray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gilroybold"
                android:text="Welcome"
                android:textColor="@color/blue_bhart"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/BankLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_bank" />

                    <TextView
                        android:id="@+id/BankNameTextView_airtel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/gilroymedium"
                        android:text="Select Your Bank Account"
                        android:textColor="@color/bhartgray"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Enter Withdraw Amount"
                    android:textColor="#6C727A"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="25dp"
                        android:src="@drawable/with_rupes" />

                    <EditText
                        android:id="@+id/edit_amount_airtel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gilroymedium"
                        android:inputType="number"
                        android:maxLength="6"
                        android:text=""
                        android:textColor="#343352"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|start"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:id="@+id/AddButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonColor1"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:background="@drawable/green_light_round_corner"
                            android:text="+ \u20B9500"
                            android:textColor="@color/white"
                            android:textSize="7sp" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="26dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/addDenomination1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/AddButton1"
                        android:layout_alignTop="@id/AddButton1"
                        android:layout_alignRight="@id/AddButton1"
                        android:layout_alignBottom="@id/AddButton1" />


                    <LinearLayout
                        android:id="@+id/AddButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/AddButton1">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonColor2"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:background="@drawable/green_light_round_corner"
                            android:text="+ \u20B91000"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="26dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/addDenomination2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/AddButton2"
                        android:layout_alignTop="@id/AddButton2"
                        android:layout_alignRight="@id/AddButton2"
                        android:layout_alignBottom="@id/AddButton2" />

                    <LinearLayout
                        android:id="@+id/AddButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/AddButton2">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonColor3"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:background="@drawable/green_light_round_corner"
                            android:text="+ \u20B92000"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="26dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/addDenomination3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/AddButton3"
                        android:layout_alignTop="@id/AddButton3"
                        android:layout_alignRight="@id/AddButton3"
                        android:layout_alignBottom="@id/AddButton3" />

                    <LinearLayout
                        android:id="@+id/AddButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/AddButton3">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonColor4"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:background="@drawable/green_light_round_corner"
                            android:text="+ \u20B93000"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="26dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/addDenomination4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/AddButton4"
                        android:layout_alignTop="@id/AddButton4"
                        android:layout_alignRight="@id/AddButton4"
                        android:layout_alignBottom="@id/AddButton4" />

                    <LinearLayout
                        android:id="@+id/AddButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/AddButton4">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonColor5"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:background="@drawable/green_light_round_corner"
                            android:text="+ \u20B94000"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/addDenomination5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/AddButton5"
                        android:layout_alignTop="@id/AddButton5"
                        android:layout_alignRight="@id/AddButton5"
                        android:layout_alignBottom="@id/AddButton5" />
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Enter Aadhaar Card Number"
                    android:textColor="#6C727A"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_aadhaaar_bhart" />

                    <EditText
                        android:id="@+id/AadharNumberEditText_airtel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gilroymedium"
                        android:inputType="number"
                        android:maxLength="14"
                        android:text=""
                        android:textColor="#343352"
                        android:textCursorDrawable="@android:color/transparent"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_shildlock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/gilroymedium"
                    android:text="Your data is safe with us!"
                    android:textColor="#45B07C"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gilroymedium"
                android:text="@string/aepsbridge"
                android:textColor="#6C727A"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_cash_submit_airtel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout_button_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/btn_airtel_cash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gilroybold"
                android:text="Cash Withdraw"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_path" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>