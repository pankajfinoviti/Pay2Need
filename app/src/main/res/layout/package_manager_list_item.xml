<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white_card"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/vir_corp_regular"
                android:text="Scheme Id"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Gray" />

            <TextView
                android:id="@+id/tvSchemeId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="7"
                android:fontFamily="@font/vir_corp_regular"
                android:text="8889689856"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/vir_corp_regular"
                android:text="Name"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Gray" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="7"
                android:fontFamily="@font/vir_corp_regular"
                android:text="BC8494938948983"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />


        <LinearLayout
            android:id="@+id/secAeps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/vir_corp_regular"
                android:text="Status"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/Gray" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="7"
                android:fontFamily="@font/vir_corp_regular"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp">
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/editBtn"
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:minWidth="0dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:layout_marginStart="10dp"
               android:background="@drawable/primary_stroke_bg"
               android:text="Edit"
               android:textAllCaps="false"
               android:textSize="12sp" />

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/commissionBtn"
               android:layout_width="wrap_content"
               android:minWidth="0dp"
               android:layout_height="35dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:layout_marginStart="10dp"
               android:textAllCaps="false"
               android:textSize="12sp"
               android:background="@drawable/primary_stroke_bg"
               android:text="View Commission" />

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/chargeBtn"
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:minWidth="0dp"
               android:layout_marginStart="10dp"
               android:textAllCaps="false"
               android:textSize="12sp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:background="@drawable/primary_stroke_bg"
               android:text="Commission/Charge"
              />
       </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
